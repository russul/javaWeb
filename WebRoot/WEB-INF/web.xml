<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>SumServlet</servlet-name>
    <servlet-class>cn.scut.jsp.SumServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>cn.scut.jsp.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>VertifyCodeServlet</servlet-name>
    <servlet-class>cn.scut.jsp.VertifyCodeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>TestServlet</servlet-name>
    <servlet-class>cn.scut.test.TestServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>SumServlet</servlet-name>
    <url-pattern>/SumServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>VertifyCodeServlet</servlet-name>
    <url-pattern>/VertifyCodeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>TestServlet</servlet-name>
    <url-pattern>/TestServlet</url-pattern>
  </servlet-mapping>
</web-app>